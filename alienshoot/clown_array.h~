#ifndef __CLOWN_ARRAY_H__
#define __CLOWN_ARRAY_H__

#include "sprite_array.h"
#include "bounded_sprite.h"
#include "image_bank_display.h"

#define FORD_GRAVITY 1
#define FORD_TERMINAL 10
#define MAX_CLOWN_POS 20

class clown_array : public sprite_array
{
 public:

  clown_array(char *fileroot, char *ext, int frames, double spawn_rate, SDL_Rect bounds);
  ~clown_array();

  void spawn_clowns(int howmany);
  void draw(SDL_Surface * screen);
  int at_edge();
  int hit(int x, int y);

 protected:

  image_bank_display * _disp;
  double _spawn_rate;
  SDL_Rect _bounds;
  
};


#endif
